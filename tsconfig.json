{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*", "src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots": ["./@types", "./node_modules/@types"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
